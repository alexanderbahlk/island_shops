<div id="title_bar" class="title_bar">
  <div id="titlebar_left">
    <span class="breadcrumb">
      <%= link_to "Admin", admin_root_path %>
      <span class="breadcrumb_sep">/</span>
      <%= link_to "Shop Item Sub Categories", admin_shop_item_sub_categories_path %>
      <span class="breadcrumb_sep">/</span>
      <span class="current">Without Types</span>
    </span>
    <h1 id="page_title">Subcategories Without Types</h1>
  </div>
</div>

<div class="panel">
  <div class="panel_contents">
    <p>These subcategories have no associated types:</p>

    <% if @subcategories_without_types.any? %>
      <div class="table_wrapper">
        <table class="index_table index">
          <thead>
            <tr>
              <th class="col col-id">ID</th>
              <th class="col col-category">Category</th>
              <th class="col col-title">Subcategory</th>
              <th class="col col-created_at">Created At</th>
              <th class="col col-actions">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @subcategories_without_types.each_with_index do |subcategory, index| %>
              <tr class="<%= cycle('odd', 'even') %>">
                <td class="col col-id"><%= subcategory.id %></td>
                <td class="col col-category">
                  <%= link_to subcategory.shop_item_category.title, admin_shop_item_category_path(subcategory.shop_item_category) %>
                </td>
                <td class="col col-title"><%= subcategory.title %></td>
                <td class="col col-created_at"><%= l(subcategory.created_at, format: :long) %></td>
                <td class="col col-actions">
                  <%= link_to "View", admin_shop_item_sub_category_path(subcategory), class: "member_link view_link" %>
                  <%= link_to "Edit", edit_admin_shop_item_sub_category_path(subcategory), class: "member_link edit_link" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="blank_slate_container">
        <span class="blank_slate">
          <span class="blank_slate_content">
            <h1>No Subcategories Without Types</h1>
            <p>All subcategories have associated types.</p>
          </span>
        </span>
      </div>
    <% end %>
  </div>
</div>

<div class="action_items">
  <%= link_to "Back to Shop Item Sub Categories", admin_shop_item_sub_categories_path, class: "action_item" %>
</div>